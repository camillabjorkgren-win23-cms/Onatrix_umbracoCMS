@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper
@{
    var rootContents = UmbracoHelper.ContentAtRoot();
    var settings = rootContents?.FirstOrDefault(x => x.ContentType.Alias == "settings") ?? null;
    var siteName = settings?.Value<string>("siteName") ?? "";
}
<footer>
    <div class="container">
        <p class="copyright">© @DateTime.Now.Year @siteName. All Rights Reserved. Credits to
            <span class="theme"> <a href="https://themeforest.net/user/themesflat/portfolio">Themesflat.</a></span>
        </p>
    </div>
</footer>